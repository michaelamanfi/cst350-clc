@model BibleApplication.Models.SearchModel

<h4>Search the Bible</h4>
<hr />
  @if(ViewBag.SuccessMessage != null && !string.IsNullOrWhiteSpace(ViewBag.SuccessMessage))
    {
        <div class="alert alert-success">@ViewBag.SuccessMessage</div>
    }
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Home" asp-action="SearchResults" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <!-- Search Term Input -->
            <div class="form-group">
                <label asp-for="Text" class="control-label">Enter text to search for in the Bible</label>
                <input asp-for="Text" class="form-control" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>

            <!-- Testament Type Dropdown -->
            <div class="form-group">
                <label asp-for="Testament" class="control-label">Select the Testament from here</label>
                <select asp-for="Testament" asp-items="Html.GetEnumSelectList<BibleApplication.Models.TestermentType>()" class="form-control">
                    <option value="">Select Testament</option>
                </select>
                <span asp-validation-for="Testament" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
